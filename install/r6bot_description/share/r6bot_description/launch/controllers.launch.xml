<launch>
    <let name="urdf_path" value="$(find-pkg-share r6bot_description)/urdf/r6bot_gazebo.xacro" />
    <let name="rviz_path" value="$(find-pkg-share r6bot_description)/rviz/urdf_config.rviz" />
    <let name="config_path" value="$(find-pkg-share r6bot_description)/config/r6bot_controllers.yaml" />
    <let name="gz_config_path" value="$(find-pkg-share r6bot_description)/config/gazebo_bridge.yaml" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher" >
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param from="$(var config_path)"/>
    </node>


    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="empty.sdf -r"/>
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description"/>

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gz_config_path)"/>
    </node>

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="forward_command_controller" />

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_path)"/>

</launch>